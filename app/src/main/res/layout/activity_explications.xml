<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.heinenj.heinenjocelinas.Explications">

    <TextView android:text="Explications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/titreE"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textExplication"
        android:text="Culture: "
        android:layout_below="@+id/titreE"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cultExplication"
        android:text="Choisir la bonne réponse parmis 3 réponses"
        android:layout_below="@+id/textExplication"
        android:textSize="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/explicationMath"
        android:text="Math: "
        android:layout_below="@+id/cultExplication"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMath"
        android:text="Donner la réponse au calcul"
        android:layout_below="@+id/explicationMath"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back"
        android:onClick="back"
        android:background="@drawable/backnext"
        android:textColor="#ffffff"
        />

</RelativeLayout>
