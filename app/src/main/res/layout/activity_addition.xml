<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.heinenj.heinenjocelinas.Addition">

    <TextView android:text="Addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/titreM"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="__"
        android:id="@+id/var1"
        android:layout_below="@+id/titreM"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/fixe"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text=" + "
        android:id="@+id/fixe"
        android:layout_below="@+id/titreM"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/var2"
        android:textSize="30dp"
        android:text="__"

        android:layout_alignTop="@+id/fixe"
        android:layout_toRightOf="@+id/fixe"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text=" = "
        android:id="@+id/egal1"
        android:layout_alignTop="@+id/fixe"
        android:layout_toRightOf="@+id/var2"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/resMult"
        android:text="     "
        android:layout_alignTop="@+id/egal1"
        android:layout_toRightOf="@+id/egal1"
        android:inputType="phone"

        />

    ////////////////////////////////////////



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:text="NEXT"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="next"
        android:background="@drawable/backnext"
        android:textColor="#ffffff"
        />


</RelativeLayout>
