<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.heinenj.heinenjocelinas.Hub_choix">


    <TextView android:text="Bonjour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/greating"
        />

    <TextView android:text="Selectionne ton exercice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/TitreExo"
        android:layout_below="@+id/greating"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Math"
        android:onClick="mathQuestions"
        android:id="@+id/butMath"
        android:layout_below="@+id/TitreExo"
        android:background="@drawable/menu"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"


        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Culture"
        android:onClick="cultureQuestions"
        android:layout_below="@+id/butMath"
        android:id="@+id/butCulture"
        android:background="@drawable/menu"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="explications"
        android:onClick="explication"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/butCulture"
        android:background="@drawable/menu"
        android:textColor="#ffffff"
        android:id="@+id/butexplication"
        android:layout_marginBottom="40dp"


        />

    <TextView android:text="Score questions: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/scoreMath"
        android:layout_below="@+id/butexplication"
        />

    <TextView android:text="Score questions: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/scoreCulture"
        android:layout_below="@+id/scoreMath"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back"
        android:onClick="back"
        android:background="@drawable/backnext"
        android:textColor="#ffffff"
        />

</RelativeLayout>
